<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="itesm.mx.finalprojectmobile20.AddEvent"
    android:id="@+id/ae_layout">

    <EditText
        android:layout_width="420px"
        android:layout_height="wrap_content"
        android:id="@+id/ae_eventName_ET"
        android:hint="Type event title here"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_width="420px"
        android:layout_height="wrap_content"
        android:id="@+id/ae_eventLocation_ET"
        android:hint="Type location here"
        android:layout_below="@+id/ae_eventName_ET"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="Type date here"
        android:ems="10"
        android:id="@+id/ae_date_ET"
        android:layout_below="@+id/ae_eventLocation_ET"
        android:layout_alignLeft="@+id/ae_time_ET"
        android:layout_alignStart="@+id/ae_time_ET"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:hint="Starting time"
        android:ems="10"
        android:id="@+id/ae_time_ET"
        android:layout_below="@+id/ae_date_ET"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saveEvent_BT"
        android:id="@+id/ae_saveEvent_BT"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
